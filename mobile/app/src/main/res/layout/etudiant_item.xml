<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="20dp">
<RelativeLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/t"> <!-- Apply a background with a border -->

    <TextView
        android:id="@+id/ids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:visibility="gone" />


    <TextView
        android:id="@+id/nomEtudiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <Button
        android:id="@+id/delete"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/nomEtudiant"
        android:background="@color/red"
        android:text="Supprimer" />

    <TextView
        android:id="@+id/prenomEtudiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomEtudiant"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <Button
        android:id="@+id/update"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="21dp"
        android:layout_toEndOf="@+id/prenomEtudiant"
        android:text="modifier" />

    <TextView
        android:id="@+id/villeEtudiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prenomEtudiant"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="16dp"
        android:text="TextView" />

</RelativeLayout>

</FrameLayout>